---
// src/pages/auth/px/[uuid].astro


import '../../../styles/global.css';
import Sidebar from '../../../components/Sidebar.astro';


const { uuid } = Astro.params;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Historial del Paciente</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="bg-gray-100 min-h-screen flex">
    <button id="toggleSidebarBtn" class="md:hidden bg-gray-900 text-white px-4 py-2 m-4 rounded fixed z-50">
      ☰ Menú
    </button>

    <Sidebar />

    <main class="flex-1 p-6">
      <div class="max-w-5xl mx-auto space-y-6">
        <header class="flex items-center justify-between">
          <h1 class="text-2xl font-bold">Historial del Paciente</h1>
          <a href="/auth/pacientes" class="text-sm underline">← Volver a pacientes</a>
        </header>

        <section class="bg-white border rounded p-4">
          <h2 class="text-lg font-semibold mb-2">Métricas de salud</h2>
    
        </section>
      </div>
    </main>

    <script>
      const btn = document.getElementById("toggleSidebarBtn");
      const sidebar = document.getElementById("sidebar");
      btn?.addEventListener("click", () => {
       sidebar?.classList.toggle("hidden");
      });
    </script>
  </body>
</html>
